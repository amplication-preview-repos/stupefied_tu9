datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  buyBoxStatus       Boolean?
  competitors        Competitor[]
  createdAt          DateTime            @default(now())
  currentPrice       Float?
  id                 String              @id @default(cuid())
  name               String?
  performanceReports PerformanceReport[]
  repricingRules     RepricingRule[]
  stockLevel         Int?
  updatedAt          DateTime            @updatedAt
}

model Competitor {
  competitorPrice Float?
  createdAt       DateTime @default(now())
  id              String   @id @default(cuid())
  marketCondition String?
  product         Product? @relation(fields: [productId], references: [id])
  productId       String?
  updatedAt       DateTime @updatedAt
}

model PerformanceReport {
  competitorAnalysis Json?
  createdAt          DateTime @default(now())
  id                 String   @id @default(cuid())
  pricingHistory     Json?
  product            Product? @relation(fields: [productId], references: [id])
  productId          String?
  sales              Int?
  updatedAt          DateTime @updatedAt
}

model RepricingRule {
  createdAt          DateTime @default(now())
  id                 String   @id @default(cuid())
  maximumPrice       Float?
  minimumPrice       Float?
  product            Product? @relation(fields: [productId], references: [id])
  productId          String?
  ruleDescription    String?
  targetProfitMargin Float?
  updatedAt          DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
